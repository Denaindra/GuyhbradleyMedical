<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDotNET8.Screens.HomePage"
             Title="TrakkaClinical">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStopCollection>
                    <GradientStop Color="Azure" Offset="0.0" />
                    <GradientStop Color="#DFECF1" Offset="1.1" />
                </GradientStopCollection>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Frame HasShadow="False" BorderColor="Wheat" CornerRadius="10" BackgroundColor="White"  Margin="20,20,20,10" Padding="5">
                <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
                    <Label Text=" In partnership with:" HorizontalOptions="Center" FontSize="14"/>
                    <Image Aspect="AspectFit" HorizontalOptions="Center" HeightRequest="100" Source="{Binding ImageLogoPath}" />
                </StackLayout>
            </Frame>



           
            <ScrollView Grid.Row="1">
                <StackLayout Orientation="Vertical" Padding="16,5,16,5" Spacing="10">
                    <Button Margin="0,10,0,0" x:Name="btnBloodPressure" Clicked="BloodPressureBtnClicked" Text="BLOOD PRESSURE"   BackgroundColor="{DynamicResource Primary}" TextColor="White"/>
                    <Button Margin="0,10,0,0" x:Name="btnUrineProtein" Clicked="UrineProteinBtnClicked" Text="URINE PROTEIN" BackgroundColor="{DynamicResource Primary}" TextColor="White"/>
                    <ActivityIndicator x:Name="ActivityIndicator" IsRunning="False" IsVisible="false" />
                    <Label x:Name="lblClaims" Text=""></Label>
                    <Label x:Name="lblNotification" Text=""></Label>
                </StackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>